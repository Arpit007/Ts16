<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" android:layout_weight="100">

        <ImageView
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_right_icon" android:layout_weight="10"
            android:layout_width="wrap_content" android:layout_height="match_parent"/>

        <LinearLayout android:orientation="vertical" android:layout_weight="80" android:paddingLeft="10dp"
            android:layout_width="wrap_content" android:layout_height="match_parent">

            <TextView android:layout_weight="80" android:text="MyName" android:textSize="20sp"
                      android:layout_gravity="center_vertical"
              android:id="@+id/organizerName" android:layout_width="match_parent" android:layout_height="wrap_content"/>

            <TextView android:id="@+id/organizerDetail" android:layout_weight="20"
                      android:textSize="15sp" android:text="2nd Year" android:layout_gravity="center_vertical"
                      android:layout_width="match_parent" android:layout_height="wrap_content"/>

        </LinearLayout>

        <ImageButton android:src="@drawable/call_icon" android:scaleType="fitCenter"
                     android:id="@+id/organizerCall"
                     style="@style/Base.Widget.AppCompat.Button.Borderless" android:layout_weight="10"
                     android:layout_width="wrap_content" android:layout_height="match_parent"/>

</LinearLayout>