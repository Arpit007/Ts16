<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="horizontal"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="5dp" android:paddingBottom="10dp" android:paddingTop="10dp">
    <ImageView
        android:id="@+id/resultBullet" android:paddingRight="5dp" android:layout_centerVertical="true"
        android:src="@drawable/bullet_icon" android:layout_alignParentLeft="true"
        android:layout_width="15dp" android:layout_height="15dp"/>
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Hey There" android:id="@+id/resultName"
        android:textSize="20sp" android:paddingLeft="5dp" android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/resultBullet" android:layout_toEndOf="@+id/resultBullet"/>
    <ImageView android:src="@drawable/arrow_right_icon"
               android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:layout_centerVertical="true" android:layout_alignParentRight="true"
               android:layout_alignParentEnd="true"/>
</RelativeLayout>