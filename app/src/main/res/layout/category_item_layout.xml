<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:padding="5dp"
                android:id="@+id/category_recycler">
    <ImageView
        android:id="@+id/categoryBullet" android:paddingRight="5dp" android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" android:src="@drawable/bullet_icon"
        android:layout_width="15dp" android:layout_height="15dp"/>
    <TextView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="Hey There" android:id="@+id/category_name"
        android:textSize="27sp" android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/categoryBullet" android:paddingLeft="5dp"
        android:layout_toEndOf="@+id/categoryBullet"/>

    <ImageView
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_alignParentRight="true" android:layout_centerVertical="true"
        android:src="@drawable/arrow_right_icon"/>
</RelativeLayout>