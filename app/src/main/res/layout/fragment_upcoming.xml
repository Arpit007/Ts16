<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.nitkkr.gawds.ts16.upcomingFragment">
    <TextView
        android:layout_centerVertical="true" android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" android:id="@+id/NoUpcoming"
        android:text="@string/NoUpcoming" android:visibility="invisible"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"/>
    <ListView android:id="@+id/upcomingList"
                  android:layout_width="match_parent" android:layout_height="wrap_content"/>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/upcomingRecycler">

    </android.support.v7.widget.RecyclerView>

</FrameLayout>
