<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="5dp" android:orientation="vertical"
              android:layout_width="match_parent" android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView android:paddingRight="5dp"
            android:id="@+id/newsBullet" android:src="@drawable/bullet_icon" android:layout_gravity="center_vertical"
            android:layout_width="15dp" android:layout_height="15dp"/>
        <TextView
            android:id="@+id/news_Title" android:text="werty" android:textSize="25sp"
            android:paddingLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:paddingLeft="15dp"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/news_content" android:text="123"
            android:textSize="18sp" android:paddingLeft="5dp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout android:paddingLeft="15dp" android:gravity="right"
                  android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView android:paddingRight="5dp"
            android:src="@drawable/time_icon" android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="5dp"
        android:id="@+id/news_date" android:text="456" android:layout_gravity="center_vertical"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>
</LinearLayout>