<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" android:padding="5dp"
             tools:context="com.nitkkr.gawds.ts16.eventRuleTab">
    <RelativeLayout
        android:layout_width="match_parent" android:layout_height="wrap_content">

        <TextView android:drawableLeft="@drawable/call_icon" android:text="Coordinator"
                  android:id="@+id/eventCall" android:gravity="center_vertical" android:drawablePadding="5dp"
               android:padding="5dp" android:paddingRight="5dp" android:layout_alignParentRight="true"
               android:layout_width="wrap_content" android:layout_height="wrap_content"/>

        <ScrollView android:layout_below="@id/eventCall"
        android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eventRuleText"
                android:textAlignment="gravity" android:paddingTop="10dp"
                android:gravity="left" android:textSize="17sp" android:singleLine="false"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>

    </RelativeLayout>
</FrameLayout>
