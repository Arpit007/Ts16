<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:padding="5dp"
              android:id="@+id/event_recycler_item" android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content" android:layout_height="wrap_content">

        <LinearLayout android:orientation="horizontal" android:layout_alignParentLeft="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content">

            <ImageView android:paddingRight="5dp"
                   android:id="@+id/eventBullet" android:src="@drawable/bullet_icon" android:layout_gravity="center_vertical"
                   android:layout_width="15dp" android:layout_height="15dp"/>
            <TextView
                android:paddingLeft="5dp"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textSize="25sp" android:id="@+id/event_name"/>

    </LinearLayout>

        <CheckBox android:layout_alignParentRight="true" android:button="@drawable/bookmark_style"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
             android:id="@+id/starrred"/>

    </RelativeLayout>

    <LinearLayout android:paddingLeft="15dp" android:gravity="right" android:paddingTop="5dp"
                  android:layout_width="match_parent" android:layout_height="wrap_content">

        <ImageView android:paddingRight="5dp"
                   android:src="@drawable/time_icon" android:layout_gravity="center_vertical"
                   android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        <TextView
            android:paddingLeft="5dp"
            android:id="@+id/recycler_event_date" android:text="456" android:layout_gravity="center_vertical"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>