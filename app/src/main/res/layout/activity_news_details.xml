<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitkkr.gawds.ts16.newsDetails">
    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_width="match_parent" android:layout_height="180dp"
        android:id="@+id/eventDetailImage"/>
    <TextView
        android:paddingLeft="5dp"  android:background="#5c3c3f41"
        android:id="@+id/newsTitle" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:layout_alignBottom="@+id/eventDetailImage"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:textSize="25sp" android:text="Mirage"/>
    <ScrollView android:layout_below="@id/newsTitle"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:padding="15dp"
            android:text="Hello World!" android:textSize="20sp"
            android:layout_width="match_parent" android:layout_height="wrap_content"/>
    </ScrollView>
</RelativeLayout>
