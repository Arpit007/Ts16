<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nitkkr.gawds.ts16.eventsListPage"
    android:background="@drawable/event_bg"
    >

    <TextView
        android:layout_centerVertical="true" android:layout_centerHorizontal="true"
        android:layout_centerInParent="true" android:id="@+id/noEvent"
        android:text="@string/noEvent" android:visibility="invisible"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <ListView android:id="@+id/eventList"
              android:divider="#00ffffff" android:dividerHeight="20dp"
              android:paddingLeft="10dp" android:paddingRight="10dp"
              android:paddingTop="30dp" android:scrollbars="none"

              android:layout_width="match_parent" android:layout_height="wrap_content"/>
</RelativeLayout>
